# Email Workflow Configuration - TEMPLATE
# Copy this file to workflow_config.yaml and customize with your settings
#
# IMPORTANT: Never commit workflow_config.yaml with your real data!
# It should be in .gitignore

# ============================================================================
# EXTRACTION SETTINGS (extractor.py)
# ============================================================================
extraction:
  # Outlook account and folder settings
  target_account_email: "your.email@company.com"  # ← CHANGE THIS to your email
  inbox_folder_name: "Inbox"                      # or "Bandeja de entrada", etc.
  target_folder_name: "YourFolder"                # ← CHANGE THIS to your folder
  target_subfolder_name: ""                       # Optional subfolder name

  # Output settings
  output_dir: "outputs"
  output_filename: "emails.xlsx"
  excluded_filename: "emails_excluded.xlsx"
  errors_filename: "emails_errors.xlsx"

  # Processing settings
  progress_interval: 10                            # Print progress every N items

# ============================================================================
# PROCESSING SETTINGS (email_processing.py)
# ============================================================================
processing:
  # Input/Output files
  input_file: "outputs/emails.xlsx"
  output_file: "outputs/emails_processed.xlsx"

  # API Selection
  use_openrouter: true                             # true = Use OpenRouter, false = Direct OpenAI

  # Model settings
  # If using OpenRouter (recommended):
  #   - "openai/gpt-4o-mini" - Fast and cheap ($0.15/$0.60 per 1M tokens)
  #   - "google/gemini-flash-1.5" - Even cheaper ($0.075/$0.30 per 1M tokens)
  #   - "anthropic/claude-3-haiku" - Fast Claude model
  #   - See OPENROUTER_GUIDE.md for more options
  # If using OpenAI directly:
  #   - "gpt-4o-mini" - Fast and cheap
  #   - "gpt-4o" - More capable but expensive
  model: "openai/gpt-4o-mini"                      # Model to use (format depends on API)
  max_tokens: 700                                  # Max tokens per request
  temperature: 0                                   # Temperature for AI responses (0 = deterministic)

  # Concurrency settings
  concurrency: 10                                  # Number of parallel API requests
  sleep_between_batches: 0                         # Seconds to sleep between batches

  # Retry settings
  retry_attempts: 3                                # Number of retry attempts
  retry_min_wait: 2                                # Minimum wait time (seconds)
  retry_max_wait: 20                               # Maximum wait time (seconds)

# ============================================================================
# WORKFLOW SETTINGS (workflow.py)
# ============================================================================
workflow:
  # Checkpoint behavior
  require_checkpoint_confirmation: true            # Pause for user review between steps
  auto_process: false                              # Skip checkpoint if true

  # Default date filtering (optional)
  # Uncomment to set default date filters
  # default_start_date: "2024-01-01"
  # default_end_date: "2024-12-31"

# ============================================================================
# ENVIRONMENT SETTINGS
# ============================================================================
environment:
  # API Keys - SET ONE OF THESE IN YOUR .env FILE (not here!)

  # For OpenRouter (RECOMMENDED - cheaper and more options):
  # 1. Get key from: https://openrouter.ai/keys
  # 2. Add to .env file:
  #    OPENROUTER_API_KEY=sk-or-your-key-here
  # 3. See OPENROUTER_GUIDE.md for detailed setup

  # For Direct OpenAI:
  # 1. Get key from: https://platform.openai.com/api-keys
  # 2. Add to .env file:
  #    OPENAI_API_KEY=sk-your-key-here

  # Python path for virtual environment (optional)
  # python_path: "/path/to/venv/bin/python"
